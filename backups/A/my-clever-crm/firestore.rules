rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users collection: Only authenticated users can read/write their own data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Helper function to check if email is admin
    function isAdminEmail() {
      return request.auth.token.email in [
        'chris@speedycreditrepair.com', 
        'clahage@gmail.com'
      ];
    }
    
    // Contacts collection: All authenticated users can read, admins can write, or allow all writes for development
    match /contacts/{contactId} {
      allow read, write: if request.auth != null;
    }

    // Revenue Forecasts collection: Only admins can read/write
    match /revenueForecasts/{forecastId} {
      allow read, write: if request.auth != null && isAdminEmail();
    }

    // Historical Performance collection: Only admins can read/write
    match /historicalPerformance/{historyId} {
      allow read, write: if request.auth != null && isAdminEmail();
    }
    
    // Roles and Features collections: Only admins can read/write
    match /roles/{roleId} {
      allow read, write: if request.auth != null && isAdminEmail();
    }
    
    match /features/{featureId} {
      allow read, write: if request.auth != null && isAdminEmail();
    }
    
    // Other collections: Only authenticated users can read, but only admins can write
    match /{collection}/{docId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && isAdminEmail();
    }
  }
}