{
  "functions": {
    "source": "functions",
    "runtime": "nodejs18",
    "port": 5010
  },
  "hosting": {
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "emulators": {
    "functions": {
      "port": 5010
    },
    "hosting": {
      "port": 5002
    },
    "ui": {
      "enabled": true,
      "port": 4001
    }
  }
  ,
  "firestore": {
    "rules": "firestore.rules"
  }
}