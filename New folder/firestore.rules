rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    function isAdmin() {
      return isAuthenticated() && 
        (request.auth.token.role == 'admin' || request.auth.token.role == 'master');
    }
    function isEmployee() {
      return isAuthenticated() && request.auth.token.role == 'employee';
    }
    function isClient() {
      return isAuthenticated() && request.auth.token.role == 'client';
    }
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    // Contacts collection
    match /contacts/{document=**} {
      allow read: if isAuthenticated() && (isAdmin() || isEmployee());
      allow write: if isAdmin();
    }
    // Credit scores collection
    match /creditScores/{document=**} {
      allow read: if isAuthenticated() && (isAdmin() || isEmployee());
      allow write: if isAdmin() || isEmployee();
    }
    // Dispute letters collection
    match /disputeLetters/{document=**} {
      allow read: if isAuthenticated() && (isAdmin() || isEmployee());
      allow write: if isAdmin() || isEmployee();
    }
    // Clients collection
    match /clients/{clientId} {
      allow read: if isAdmin() || isEmployee() || isOwner(clientId);
      allow write: if isAdmin();
      allow update: if isOwner(clientId) && request.resource.data.role == resource.data.role;
    }
    // Users collection (for user profiles)
    match /users/{userId} {
      allow read: if isOwner(userId) || isAdmin();
      allow write: if isOwner(userId) || isAdmin();
    }
    // Analytics collection
    match /analytics/{document=**} {
      allow read: if isAdmin();
      allow write: if false; // Only written by Cloud Functions
    }
    // Leads collection
    match /leads/{document=**} {
      allow read: if isAuthenticated() && (isAdmin() || isEmployee());
      allow write: if isAdmin();
    }
    // Default deny all
    match /{document=**} {
      allow read, write: if false;
    }
  }
}